<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.karamanov.beloteGame"
    android:installLocation="preferExternal"
    android:versionCode="38"
    android:versionName="1.38" >
    

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />


    <application
        android:name=".Belote"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <!--android:theme="@style/BeloteTheme"-->
        <!-- meta-data android:name="com.google.android.gms.version" android:value="6171000" /-->
        
        <activity
            android:name=".gui.screen.logo.LogoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.screen.main.BeloteActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" />
        <activity
            android:name=".gui.screen.tricks.TricksActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".gui.screen.gameResume.GameResumeActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".gui.screen.score.ScoreActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".gui.screen.pref.BelotePreferencesActivity"
            android:label="@string/app_name" />

    </application>

</manifest>